<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:srcCompat="@drawable/ic_settings"-->
        <!--android:id="@+id/img_settings"-->
        <!--android:layout_marginTop="@dimen/activity_vertical_margin"-->
        <!--android:layout_marginRight="@dimen/activity_horizontal_margin"-->
        <!--android:layout_gravity="right"/>-->

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Usuario"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorTopBar"
        android:layout_marginTop="5dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="textEmailAddress"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:background="@drawable/tb_bg"
            android:hint=""
            android:textColor="@color/text_color_dark"
            android:id="@+id/tb_email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="ContraseÃ±a"
            android:textSize="16dp"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:textColor="@color/colorTopBar"
            android:layout_marginTop="@dimen/activity_vertical_margin" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:background="@drawable/tb_bg"
            android:hint=""
            android:textColor="@color/text_color_dark"
            android:id="@+id/tb_password"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_recordar"
            android:checked="true"
            android:text="@string/recordar_contrase_a"
            android:textSize="16dp"
            android:textStyle="bold"
            android:button="@drawable/checkbox_terms"
            android:textColor="@color/text_color_dark"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>
        <Button
            android:text="Iniciar"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/btn_entrar"
            style="@style/btn" />

    </LinearLayout>

</LinearLayout>