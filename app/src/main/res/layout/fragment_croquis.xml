<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.app.checklist.Croquis">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="50dp"
            android:background="@color/white"
            android:id="@+id/btnExhibidor"
            android:padding="16dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/exhibidor"/>
        <ImageButton
            android:layout_width="50dp"
            android:background="@color/white"
            android:padding="16dp"
            android:id="@+id/btnRefri"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/refri"/>
        <ImageButton
            android:layout_width="50dp"
            android:background="@color/white"
            android:padding="16dp"
            android:id="@+id/btnRepisa"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/repi"/>
        <ImageButton
            android:layout_width="50dp"
            android:background="@color/white"
            android:padding="16dp"
            android:id="@+id/btnVitrina"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/vitrina"/>
        <ImageButton
            android:layout_width="50dp"
            android:background="@color/white"
            android:padding="16dp"
            android:id="@+id/btnTendero"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/tendero"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/lienzo"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="70dp"
            android:background="@color/white"
            android:id="@+id/btnCancelar"
            android:padding="16dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/ic_close_black_24dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:id="@+id/btnSiguiente"
            android:padding="16dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_check_black_24dp"/>
    </LinearLayout>

</LinearLayout>
