<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:textColor="@color/text_color_dark"
                android:id="@+id/cb_field"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lb_field"
                android:text="field"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorTopBar"
                android:layout_toRightOf="@+id/cb_field"
                android:layout_toEndOf="@+id/cb_field"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/lb_info"
        android:text="Helps Msg"
        android:textStyle="normal"
        android:textColor="@color/colorTopBar"
        android:paddingBottom="5dp"
        android:background="@drawable/tb_bg2"/>



</LinearLayout>